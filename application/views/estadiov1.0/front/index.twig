                    			<div class="brand-thumb">
                    				<a href="http://{{ sponsor.url }}" title="Ir al sitio de {{ sponsor.name }}"><img src="images/sponsor/{{ sponsor.image }}"></a>
                    			</div>
                    		</div>
                        {% endfor %}                            

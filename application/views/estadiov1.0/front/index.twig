                                    <h5>Puesto 1°</h5>
                                    <div class="first-winner">
                                        <div class="img">
                                        <img src="uploads/{{winner.user_image}}">
                                        <h5 class="text-center"><a href="/perfil/{{ winner.first_place.username }}.html" title="Perfil de {{ winner.first_place.username }}">{{ winner.first_place.username }}</a></h5>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="last-positions">
                                <h5 class="text-center"><a href="/perfil/{{ winner.second_place.username }}.html" title="Perfil de {{ winner.second_place.username }}">Puesto 2°: {{ winner.second_place.username }}</a></h5>
                                <h5 class="text-center"><a href="/perfil/{{ winner.third_place.username }}.html" title="Perfil de {{ winner.third_place.username }}">Puesto 3°: {{ winner.third_place.username }}</a></h5>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

